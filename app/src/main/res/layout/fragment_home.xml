<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.teaminfinity.tabnavigation.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">
    </ScrollView>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_row="0"
                android:layout_column="0"

                android:layout_rowSpan="4"
                android:layout_columnSpan="1"
                android:layout_marginRight="0dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Attributes"
                android:id="@+id/currentAttributesText"
                android:layout_row="0"
                android:layout_column="5"
                android:textColor="#000000"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_marginTop="90dp"
                android:layout_columnSpan="2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age: "
                android:id="@+id/a_textView"
                android:layout_row="1"
                android:layout_column="5"
                android:textColor="#000000"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AgeText"
                android:id="@+id/ageText"
                android:layout_row="1"
                android:layout_column="6"
                android:textColor="#000000"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height: "
                android:id="@+id/h_text"
                android:layout_row="2"
                android:layout_column="5"
                android:textIsSelectable="false"
                android:textSize="16dp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HeightText"
                android:id="@+id/heightText"
                android:layout_row="2"
                android:layout_column="6"
                android:textSize="16dp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="___________________________________________________"
                android:id="@+id/border1"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_columnSpan="8"
                android:layout_rowSpan="5"
                android:textColor="#000000"
                android:layout_marginTop="25dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight: "
                android:id="@+id/w_text"
                android:layout_row="3"
                android:layout_column="5"
                android:textSize="16dp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WeightText"
                android:id="@+id/weightText"
                android:layout_row="3"
                android:layout_column="6"
                android:textSize="16dp"
                android:textColor="#000000"/>

        </GridLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Login: "
                android:id="@+id/last_login_txt"
                android:textColor="#000000"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00/00/00"
                android:id="@+id/lastLoginDate"
                android:textSize="16dp"
                android:textColor="#1356cc"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="___________________________________________________"
            android:id="@+id/border2"
            android:textColor="#000000"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Length of Previous Tracking: "
                android:id="@+id/prev_tracking_txt"
                android:textColor="#000000"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 Hr 00 Min"
                android:id="@+id/prevTrackTime"
                android:textSize="16dp"
                android:textColor="#1356cc"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="___________________________________________________"
            android:id="@+id/border3"
            android:textColor="#000000"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sign Out"
            android:id="@+id/signOut"
            android:textColor="#990202"
            android:textIsSelectable="true"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="30dp"/>
    </LinearLayout>

</FrameLayout>
